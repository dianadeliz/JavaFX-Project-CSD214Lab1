<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trios.day3lab1dianat.FilmSearchController" hgap="10" vgap="10">
    <Label text="Enter Film Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="titleInput" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Button text="Search" fx:id="searchButton" onAction="#searchFilm" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label fx:id="resultLabel" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" wrapText="true"/>
</GridPane>
